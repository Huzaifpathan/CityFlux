{
  "rules": {
    ".read": false,
    ".write": false,

    "traffic": {
      ".read": "auth != null",
      ".write": "auth != null",

      "$roadId": {
        ".validate": "newData.hasChildren(['congestionLevel','lastUpdated'])",

        "congestionLevel": {
          ".validate": "newData.isString() &&
            newData.val().matches(/^(LOW|MEDIUM|HIGH)$/)"
        },

        "lastUpdated": {
          ".validate": "newData.isNumber() &&
            newData.val() <= now"
        }
      }
    },

    "parking_live": {
      ".read": "auth != null",
      ".write": "auth != null",

      "$parkingId": {
        ".validate": "newData.hasChildren(['availableSlots'])",

        "availableSlots": {
          ".validate": "newData.isNumber() &&
            newData.val() >= 0 &&
            newData.val() <= 1000"
        }
      }
    },

    "incidents": {
      ".read": "auth != null",
      ".write": "auth != null",

      "$incidentId": {
        ".validate": "newData.hasChildren(['title','latitude','longitude','timestamp']) && newData.child('timestamp').isNumber()",

        "title": {
          ".validate": "newData.isString() && newData.val().matches(/^.{1,200}$/)"
        },

        "latitude": {
          ".validate": "newData.isNumber() && newData.val() >= -90 && newData.val() <= 90"
        },

        "longitude": {
          ".validate": "newData.isNumber() && newData.val() >= -180 && newData.val() <= 180"
        },

        "timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        }
      }
    }
  }
}
